{{#partial "mainContent"}}
    <div>
        <h3 class="text-info">WELCOME TO YOUR CREATED HERO</h3>
        <hr class="w-25 mx-auto">
    </div>

    {{#if hero}}

        <div class="container">
            <div class="row">
                {{#each hero}}
                    <div class="col-md-3">
                        <div class="card heroListCard mt-4">
                            <div class="card-body">
                                <p><span style="font-weight: bold;">Name''<span> {{ heroName }}</p>
                                <hr>
                                <p><span style="font-weight: bold;">Age''<span> {{ heroAge }}</p>
                                <hr>
                                <p><span style="font-weight: bold;">Power''<span> {{ heroPower }}</p>
                                <hr>
                                <p><span style="font-weight: bold;">Weakness''<span> {{ heroWeakness }}</p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>

    {{else}}

        <h5 class="text-danger">No Heroes Created </h5>
        <button ><a class="text-secondary text-decoration-none" href="/">Go back</a></button>


    {{/if}}

{{/partial}}

{{> layout.hbs}}